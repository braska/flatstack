<% title 'Свежие публикации' %>
<h1>Свежие публикации</h1>

<% @posts.each do |post| %>
    <div class="post">
      <h2 class="post-title"><%= link_to post.title, post %></h2>

      <div class="text-muted post-info">
        <span>Дата публикации: <%= l post.created_at.to_date %></span>
        <span>Кол-во комментариев: <%= %></span>
      </div>
      <div class="post-announcement">
        <%= markdown post.announcement %>
      </div>
    </div>
    <hr>
<% end %>